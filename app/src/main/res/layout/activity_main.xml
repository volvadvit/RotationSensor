<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:src="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-38dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/XY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="XY"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/XYValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/XY"
            app:layout_constraintEnd_toEndOf="@+id/XY"
            app:layout_constraintTop_toBottomOf="@+id/XY" />

        <TextView
            android:id="@+id/YZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="YZ"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/XY"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/YZValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/YZ"
            app:layout_constraintStart_toStartOf="@+id/YZ"
            app:layout_constraintTop_toBottomOf="@+id/YZ" />

        <TextView
            android:id="@+id/ZX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:text="ZX"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/YZ"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ZXValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ZX"
            app:layout_constraintStart_toStartOf="@+id/ZX"
            app:layout_constraintTop_toBottomOf="@+id/ZX" />

        <TextView
            android:id="@+id/OxRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:text="Ox"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/OX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OxRotation"
            app:layout_constraintEnd_toEndOf="@+id/OxRotation"
            app:layout_constraintTop_toBottomOf="@+id/OxRotation" />

        <TextView
            android:id="@+id/OyRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="200dp"
            android:text="Oy"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OxRotation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/OY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OyRotation"
            app:layout_constraintEnd_toEndOf="@+id/OyRotation"
            app:layout_constraintTop_toBottomOf="@+id/OyRotation" />

        <TextView
            android:id="@+id/OzRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="200dp"
            android:text="Oz"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OyRotation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/OZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/OzRotation"
            app:layout_constraintEnd_toEndOf="@+id/OzRotation"
            app:layout_constraintTop_toBottomOf="@+id/OzRotation" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>